<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/add_book_info1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_book_info1"
        android:paddingTop="10dp"
        android:layout_margin="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/te_title"
        android:hint="title"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/te_author"
        android:hint="author"
        android:paddingLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et_isbn"
        android:hint="ISBN"
        android:paddingLeft="10dp" />

    <TextView
        android:text="@string/add_book_info2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_book_info2"
        android:paddingTop="10dp"
        android:layout_margin="5dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rb_condition"
        android:numStars="5"
        android:stepSize="1"/>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Add book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/red_button"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:id="@+id/b_addbook"
            android:layout_marginBottom="5dp" />


    </RelativeLayout>


</LinearLayout>